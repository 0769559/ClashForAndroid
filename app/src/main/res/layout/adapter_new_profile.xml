<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_clash_profiles"
    android:layout_marginTop="10dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white">

    <ImageView
        android:id="@+id/adapter_new_profile_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_profiles" />

    <TextView
        android:id="@+id/adapter_new_profile_title"
        android:layout_toEndOf="@id/adapter_new_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/clash_profiles" />

    <TextView
        android:id="@+id/adapter_new_profile_summary"
        android:text="@string/clash_profiles_summary_unselected"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_marginTop="2dp"
        android:layout_alignStart="@id/adapter_new_profile_title"
        android:layout_below="@id/adapter_new_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>